<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ItemView">

    // Cover Picture

    <ImageView
        android:id="@+id/itemView_coverPicture_imageView"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    // Title

    <TextView
        android:id="@+id/itemView_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/itemView_coverPicture_imageView"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/itemView_coverPicture_imageView"
        android:layout_toRightOf="@+id/itemView_coverPicture_imageView"
        android:text=""
        android:textColor="#010101" />

    // Author

    <TextView
        android:id="@+id/itemView_creator_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/itemView_title_textView"
        android:layout_alignStart="@+id/itemView_title_textView"
        android:layout_below="@+id/itemView_title_textView"
        android:layout_marginBottom="10dp"
        android:text=""
        android:textColor="#010101" />

    // My Review

    <TextView
        android:id="@+id/itemView_myReview_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/itemView_coverPicture_imageView"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:text="My Review:"
        android:textColor="#020202"
        android:textSize="8pt" />

    // Add to libraries

    <Button
        android:id="@+id/itemView_addToLibrary_button"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/itemView_creator_textView"
        android:layout_alignStart="@+id/itemView_creator_textView"
        android:layout_below="@+id/itemView_creator_textView"
        android:layout_marginTop="10dp"
        android:background="#ffa740"
        android:onClick="showLibraryPopUp"
        android:text="Add to Libraries" />

    // Add comment button

    <Button
        android:id="@+id/itemView_addComment_button"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/itemView_addToLibrary_button"
        android:layout_alignStart="@+id/itemView_addToLibrary_button"
        android:layout_below="@+id/itemView_addToLibrary_button"
        android:layout_marginTop="20dp"
        android:background="#ffa740"
        android:onClick="showLibraryPopUp"
        android:text="Comment" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/listView_divider"
        android:layout_marginTop="2dp">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            // Description

            <TextView
                android:id="@+id/itemView_description_textView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/itemView_descriptionHeader_textView"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="6pt" />

            // Review header

            <TextView
                android:id="@+id/itemView_reviewHeader_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Reviews"
                android:textSize="7pt" />

            // Description header

            <TextView
                android:id="@+id/itemView_descriptionHeader_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/itemView_allReviewsPreText_textView"
                android:layout_marginTop="10dp"
                android:text="Description"
                android:textSize="7pt" />

            <TextView
                android:id="@+id/itemView_allReviews_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/itemView_descriptionHeader_textView"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/itemView_allReviewsPreText_textView"
                android:layout_toRightOf="@+id/itemView_allReviewsPreText_textView"
                android:text=""
                android:textColor="#010101"
                android:textSize="8pt" />

            // All Reviews

            <TextView
                android:id="@+id/itemView_allReviewsPreText_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/itemView_reviewHeader_textView"
                android:text="Average Embr User Review:"
                android:textColor="#010101"
                android:textSize="8pt" />

            // Comments

            <ListView
                android:id="@+id/itemView_comments_listView"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/itemView_description_textView"
                android:nestedScrollingEnabled="true"
                android:longClickable="false" />

        </RelativeLayout>
    </ScrollView>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/relativeLayout"
        android:layout_alignRight="@+id/relativeLayout"
        android:layout_below="@+id/itemView_coverPicture_imageView"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/itemView_myReview_textView" />

    <View style="@style/Divider"
        android:id="@+id/listView_divider"
        android:layout_alignBottom="@id/ratingBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp" />

</RelativeLayout>
