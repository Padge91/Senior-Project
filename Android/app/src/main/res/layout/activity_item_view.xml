<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.afe.pc.embr.ItemView"
    android:background="#ffffff">


    <ImageView
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:id="@+id/imageView"
        android:src="@drawable/fellowship_of_the_ring"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="20dp" />

    // Title
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Lord of the Rings: The Fellowship of the Ring"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginBottom="10dp"
        android:textColor="#010101" />

    // Author
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author: J. R. R. Tolkien"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="10dp"
        android:textColor="#010101" />

    // Release Date
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Published: 29 July 1954"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="10dp"
        android:textColor="#010101" />

    // Page count
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Page Count: 423"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:textColor="#010101" />

    // Add to libraries
    <Button
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:text="Add to My Libraries"
        android:id="@+id/button2"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp"
        android:background="#565676" />

    // My Review
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Review:"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/star_1_1"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:textColor="#020202" />

    // 1_1
    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/star_1_1"
        android:clickable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/star_empty"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/star_2_1"
